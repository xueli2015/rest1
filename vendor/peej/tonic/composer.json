{
    "name": "peej/tonic",
    "description": "The RESTful Web App PHP Micro-Framework",
    "keywords": ["rest", "microframework"],
    "homepage": "http://peej.github.com/tonic",
    "license": "MIT",
    "authors": [
        {
            "name": "Paul James",
            "email": "paul@peej.co.uk"
        }
    ],
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "phpspec/phpspec": "2.0.*@dev",
        "behat/behat": "2.*",
        "peej/phpdoctor": "dev-master",
        "henrikbjorn/phpspec-code-coverage" : "1.*@dev"
    },
    "suggest": {
        "pimple/pimple": "A simple dependancy injection container to handle your services",
        "smarty/smarty": "PHP templating engine for building response representations"
    },
    "bin": ["web/dispatch.php"],
    "autoload": {
        "psr-0": {
            "Tonic": "src/",
            "Tyrell": "src/"
        }
    }
}
